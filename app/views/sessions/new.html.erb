<div class="text-container">
<h2>LOGIN:</h2>

<%= form_for :user, url: '/sessions' do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Submit" %>

<% end %>
</div>